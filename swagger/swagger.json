{
    "openapi": "3.0.0",
    "info": {
        "title": "API Portfolio",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://localhost:82/api/doc",
            "description": "Mon Api pour portfolio"
        }
    ],
    "paths": {
        "/candidats/{id}": {
            "get": {
                "operationId": "App\\Controller\\CandidatController::showAction",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID du candidat",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Notre Candidat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Candidat"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Candidat": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "firstname": {
                        "type": "string",
                        "nullable": true
                    },
                    "lastname": {
                        "type": "string",
                        "nullable": true
                    },
                    "adress": {
                        "type": "string",
                        "nullable": true
                    },
                    "town": {
                        "type": "string",
                        "nullable": true
                    },
                    "zipcode": {
                        "type": "integer",
                        "nullable": true
                    },
                    "email": {
                        "type": "string",
                        "nullable": true
                    },
                    "date_of_birth": {
                        "description": "A \"Y-m-d\" formatted value",
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            }
        }
    }
}