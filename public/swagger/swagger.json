            "get": {
                "tags": [
                    "Liste des Candidat"
                ],
                "operationId": "App\\Controller\\CandidatController::listAction",
                "parameters": [{
                    "$ref": "#/components/parameters/"
                }],
                "responses": {
                    "200": {
                        "description": "Notre Liste de Candidat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CandidatQuickView"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CandidatQuickView": {
                "description": "Notre Candidat en résumé",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "firstname": {
                        "type": "string"
                    },
                    "lastname": {
                        "type": "string"
                    },
                    "short_description": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Candidat": {
                "description": "Candidat en détail",
                "properties": {
                    "adress": {
                        "type": "string"
                    },
                    "town": {
                        "type": "string"
                    },
                    "zipcode": {
                        "type": "integer"
                    },
                    "email": {
                        "type": "string"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "langues": {
                        "items": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Langue"
                            }
                        }
                    },
                    "licenses": {
                        "items": {
                            "type": "array",
