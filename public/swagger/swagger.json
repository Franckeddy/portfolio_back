                            }
                        }
                    },
                    "companies": {
                        "items": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/Company"
                            }
                        }
                    }
                },
                "type": "object",
                "allOf": [{
                    "$ref": "#/components/schemas/CandidatQuickView"
                }]
            }
        },
